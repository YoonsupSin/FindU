<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sys2017.findu.GameActivity">

    <com.sys2017.findu.GameView
        android:id="@+id/gameView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/imageView_pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ptn_pause"
        android:layout_margin="16dp"
        android:clickable="true"/>



    <RelativeLayout
        android:id="@+id/relative_settingLogo"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:visibility="gone">

        <ImageView
            android:id="@+id/imageView_setting_logo"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:scaleType="fitXY"/>

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:orientation="vertical"
            android:weightSum="6"
            android:padding="5dp">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="vertical"
                android:weightSum="2"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/imageView_setting_resume"
                    android:layout_width="190dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_marginBottom="16dp"/>

                <ImageView
                    android:id="@+id/imageView_setting_exit"
                    android:layout_width="190dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:weightSum="3"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ToggleButton
                        android:id="@+id/toggleButton_ingame_bgm"
                        android:layout_width="60dp"
                        android:layout_height="24dp"
                        android:background="@drawable/setting_state"
                        android:textOff=""
                        android:textOn=""
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ToggleButton
                        android:id="@+id/toggleButton_ingame_fx"
                        android:layout_width="60dp"
                        android:layout_height="24dp"
                        android:background="@drawable/setting_state"
                        android:textOff=""
                        android:textOn=""
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ToggleButton
                        android:id="@+id/toggleButton_ingame_vibration"
                        android:layout_width="60dp"
                        android:layout_height="24dp"
                        android:background="@drawable/setting_state"
                        android:textOff=""
                        android:textOn=""
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"/>

                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView_setting_logo_close"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:scaleType="fitXY"/>

    </RelativeLayout>














</RelativeLayout>
